@{
    ViewData["Title"] = "Products";
}
@model List<Product> 

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>
                                <a asp-action="CreateEditProduct" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>
