@{
    ViewData["Title"] = "Create / Edit";
}
@model ShoppingMVC.Models.Product

<div class="text-center">
    <h1 class="display-4">Create or edit a product</h1>
</div>

<form asp-controller="Home" asp-action="CreateEditProductForm">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id" />

    <label class="mt-4">Name</label>
    <input class="form-control" type="text" placeholder="Name" asp-for="Name" />

    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Description" asp-for="Description" />

    <label class="mt-4">Price</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Price" />

    <button class="btn btn-primary" type="submit">Save</button>
</form>

